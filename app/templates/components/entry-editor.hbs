<div class="panel panel-default">
  <div class="panel-body">
<div class="form-group">
<label>Name:</label>
{{input type="text" class="form-control" placeholder="Angebotsname" value=item.title}}
</div>
<div class="form-group">
<label>Betrag:</label>
{{input type="Number" step="0.01" class="form-control" placeholder="Preis" value=item.price}}
</div>
{{select-picker selection=item.author
                content=users
                optionLabelPath="content.name"
                optionValuePath="content"}}
</div>
</div>
